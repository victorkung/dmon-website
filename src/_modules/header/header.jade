//- Include Modules
include ../button/button


mixin header(spec)
  - spec = spec || {}
  - spec.home || spec.home || ''
  - spec.active = spec.active || ''
  - spec.__class = spec.__class || ''


  if spec.home 

    main.home-header.row
 
      header.row.main-navigation
        .container
          
          div.col-xs-12

            .logo
              a(href=baseUrl) Doug Monieson

            nav.desktop-nav
              ul
                li
                  a(href=baseUrl + "trading-experience/") Trading Experience
                li
                  a(href=baseUrl + "hyde-park-angels/") Hyde Park Angels
                li
                  a(href=baseUrl + "board-experience/") Board Experience
                li
                  a(href=baseUrl + "blog/") Blog
                li
                  a(href=baseUrl + "contact/") Contact
                li
                  a(href="http://www.proxyvote.com/" class="contact-btn" target="_blank") Vote Now

            nav.mobile-nav
              a(href="#")
                img(src=baseUrl + "images/header/menu-icon-white.png" width="30")
            
            ul.mobile-nav-popup.row
              a#close-btn X
              .col-xs-offset-0.col-xs-12.col-sm-offset-2.col-sm-8
                li
                  a(href=baseUrl) Home

                li
